#include <compatibility.glsl>



uniform sampler2D IndirectDiffuseTexture;
uniform sampler2D IndirectGlossyTexture;

out vec4 result;

void main()
{
	int2 P = int2(gl_FragCoord.xy);

	result = vec4(0);

#if ENABLE_INDIRECT_DIFFUSE
	result += texelFetch(IndirectDiffuseTexture, P, 0);
#endif

#if ENABLE_INDIRECT_GLOSSY
	result += texelFetch(IndirectGlossyTexture, P, 0);
#endif
}